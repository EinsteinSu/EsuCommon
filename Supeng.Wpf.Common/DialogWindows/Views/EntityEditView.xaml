<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="Supeng.Wpf.Common.DialogWindows.Views.EntityEditView"
        Title="{Binding Title}" Height="400" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <dxlc:DataLayoutControl CurrentItem="{Binding Data,Mode=TwoWay}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Margin="5" Content="确定" Width="80" Command="{Binding OkCommand}"/>
            <Button Margin="5" Content="取消" Width="80" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
