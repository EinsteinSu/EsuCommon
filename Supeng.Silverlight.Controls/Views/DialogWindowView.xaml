<controls:ChildWindow x:Class="Supeng.Silverlight.Controls.Views.DialogWindowView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                      xmlns:views="clr-namespace:Supeng.Silverlight.Controls.Views"
                      Width="400" Height="300"
                      Title="DialogWindowView">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ContentControl Content="{Binding Content}" />
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button Margin="5" Content="确定" Width="80" Command="{Binding OkCommand}" />
                <Button Margin="5" Content="取消" Width="80" Command="{Binding CancelCommand}" />
            </StackPanel>
            <views:EsuProgressView Grid.Row="1" DataContext="{Binding Progress}" />
        </Grid>
    </Grid>
</controls:ChildWindow>