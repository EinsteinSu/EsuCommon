<Window x:Class="UpgradeToolKit.CopyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="展开升级文件" Height="80" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <StackPanel>
        <TextBlock Margin="5" Text="{Binding Message,Mode=TwoWay}" />
        <ProgressBar Margin="5" Height="18" Maximum="{Binding Progress.MaxStep}"
                     Value="{Binding Progress.Step,Mode=TwoWay}" />
    </StackPanel>
</Window>