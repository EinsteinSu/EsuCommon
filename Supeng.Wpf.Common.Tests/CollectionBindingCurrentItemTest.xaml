<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="Supeng.Wpf.Common.Tests.CollectionBindingCurrentItemTest"
        Title="CollectionBindingCurrentItemTest" Height="300" Width="300">
    <Grid>

        <dxe:ListBoxEdit Margin="5" Width="150" DisplayMember="Description" ItemsSource="{Binding Data}" SelectedItem="{Binding Data.CurrentItem,Mode=TwoWay}">
            <dxe:ListBoxEdit.StyleSettings>
                <dxe:RadioListBoxEditStyleSettings HighlightedTextBackground="Yellow" HighlightedFontFamily="{x:Null}" HighlightedFontStyle="{x:Null}" HighlightedFontSize="{x:Null}" HighlightedTextForeground="Black" HighlightedFontWeight="{x:Null}"/>
            </dxe:ListBoxEdit.StyleSettings>

        </dxe:ListBoxEdit>

    </Grid>
</Window>
